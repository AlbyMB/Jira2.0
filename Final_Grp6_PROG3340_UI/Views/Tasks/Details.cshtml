@model Final_Grp6_PROG3340_UI.Models.ViewModels.TaskViewModel
@{
    ViewData["Title"] = "Task Details";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Board">Task Board</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Task Details</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Title</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Status</h6>
                    <span class="badge bg-@GetStatusBadgeColor(Model.Status) fs-6">@Model.Status</span>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Created At</h6>
                    <p>@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Created By</h6>
                    <p><i class="bi bi-person-circle"></i> @(Model.CreatedByName ?? "Unknown")</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Assigned To</h6>
                    <p><i class="bi bi-person-check"></i> @(Model.AssignedToName ?? "Unassigned")</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <h6 class="text-muted">Updated At</h6>
                    <p>@Model.UpdatedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="row mb-3">
                    <div class="col">
                        <h6 class="text-muted">Description</h6>
                        <div class="border rounded p-3 bg-light">
                            @Model.Description
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Task
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" 
                      onsubmit="return confirm('Are you sure you want to delete this task?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Task
                    </button>
                </form>
                <a asp-action="Board" class="btn btn-secondary ms-auto">
                    <i class="bi bi-arrow-left"></i> Back to Board
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeColor(Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus status)
    {
        return status switch
        {
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.ToDo => "secondary",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Development => "primary",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Review => "warning",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Merge => "info",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Done => "success",
            _ => "secondary"
        };
    }
}
