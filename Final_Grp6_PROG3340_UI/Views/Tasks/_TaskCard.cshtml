@model Final_Grp6_PROG3340_UI.Models.ViewModels.TaskViewModel

<div class="card task-card mb-3">
    <div class="card-body">
        <h6 class="card-title">
            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-dark">
                @Model.Title
            </a>
        </h6>
        
        @if (!string.IsNullOrEmpty(Model.AssignedToName))
        {
            <p class="card-text small mb-1">
                <i class="bi bi-person"></i> @Model.AssignedToName
            </p>
        }
        else
        {
            <p class="card-text small mb-1 text-muted">
                <i class="bi bi-person"></i> Unassigned
            </p>
        }

        <p class="card-text">
            <small class="text-muted">
                <i class="bi bi-clock"></i> @Model.CreatedAt.ToString("MMM dd, yyyy")
            </small>
        </p>

        <span class="badge bg-@GetStatusBadgeColor(Model.Status)">
            @Model.Status
        </span>
    </div>
</div>

@functions {
    string GetStatusBadgeColor(Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus status)
    {
        return status switch
        {
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.ToDo => "secondary",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Development => "primary",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Review => "warning",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Merge => "info",
            Final_Grp6_PROG3340_UI.Models.ViewModels.TaskStatus.Done => "success",
            _ => "secondary"
        };
    }
}
