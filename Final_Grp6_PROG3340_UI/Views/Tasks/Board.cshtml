@model Final_Grp6_PROG3340_UI.Models.TaskBoardViewModel
@{
    ViewData["Title"] = "Task Board";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-6">
                <i class="bi bi-kanban"></i> Task Board
            </h1>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Task
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row kanban-board">
        <!-- To Do Column -->
        <div class="col">
            <div class="kanban-column">
                <div class="kanban-header bg-secondary text-white">
                    <h5>To Do</h5>
                    <span class="badge bg-light text-dark">@Model.ToDoTasks.Count</span>
                </div>
                <div class="kanban-items">
                    @foreach (var task in Model.ToDoTasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                </div>
            </div>
        </div>

        <!-- Development Column -->
        <div class="col">
            <div class="kanban-column">
                <div class="kanban-header bg-primary text-white">
                    <h5>Development</h5>
                    <span class="badge bg-light text-dark">@Model.DevelopmentTasks.Count</span>
                </div>
                <div class="kanban-items">
                    @foreach (var task in Model.DevelopmentTasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                </div>
            </div>
        </div>

        <!-- Review Column -->
        <div class="col">
            <div class="kanban-column">
                <div class="kanban-header bg-warning text-dark">
                    <h5>Review</h5>
                    <span class="badge bg-light text-dark">@Model.ReviewTasks.Count</span>
                </div>
                <div class="kanban-items">
                    @foreach (var task in Model.ReviewTasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                </div>
            </div>
        </div>

        <!-- Merge Column -->
        <div class="col">
            <div class="kanban-column">
                <div class="kanban-header bg-info text-white">
                    <h5>Merge</h5>
                    <span class="badge bg-light text-dark">@Model.MergeTasks.Count</span>
                </div>
                <div class="kanban-items">
                    @foreach (var task in Model.MergeTasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                </div>
            </div>
        </div>

        <!-- Done Column -->
        <div class="col">
            <div class="kanban-column">
                <div class="kanban-header bg-success text-white">
                    <h5>Done</h5>
                    <span class="badge bg-light text-dark">@Model.DoneTasks.Count</span>
                </div>
                <div class="kanban-items">
                    @foreach (var task in Model.DoneTasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        // ============================
        // SignalR Connection
        // ============================
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/taskhub") // must match your hub route
            .withAutomaticReconnect()
            .build();

        connection.start().catch(err => console.error("SignalR Error:", err));


        // ============================
        // Utility Helpers
        // ============================
        function showToast(message) {
            const toastHtml = `
                <div class="toast align-items-center text-bg-dark border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>`;

            const container = document.getElementById("signalr-toast-container");
            container.insertAdjacentHTML("beforeend", toastHtml);

            const toastEl = container.lastElementChild;
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        function refreshBoard() {
            location.reload();
        }


        // ============================
        // SignalR Event Listeners
        // ============================

        // 1. Task Created (all users)
        connection.on("TaskCreated", (msg) => {
            showToast(msg);
            refreshBoard(); // replace with partial DOM update if you want
        });

        // 2. Task Deleted (all users)
        connection.on("TaskDeleted", (msg) => {
            showToast(msg);
            refreshBoard();
        });

        // 3. Task Status Updated (creator only)
        connection.on("TaskStatusUpdated", (msg) => {
            showToast(msg);
            refreshBoard();
        });

        // 4. Task Assigned (assignee only)
        connection.on("TaskAssigned", (msg) => {
            showToast(msg);
            refreshBoard();
        });
    </script>

    <!-- Toast Container -->
    <div id="signalr-toast-container"
         style="position: fixed; top: 1rem; right: 1rem; z-index: 2000"></div>
}
